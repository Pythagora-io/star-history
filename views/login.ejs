<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Login</title>
  <!-- Bootstrap CSS CDN -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
  <!-- Custom theme CSS -->
  <link rel="stylesheet" href="/css/theme.css">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body class="bg-dark-charcoal">
  <%- include('partials/header', {user: user}) %>
  <% if (messages.error) { %>
  <div class="toast-container position-absolute top-0 end-0 p-3" style="z-index: 11">
    <div class="toast align-items-center text-white bg-danger border-0" role="alert" aria-live="assertive" aria-atomic="true">
      <div class="d-flex">
        <div class="toast-body">
          <%= messages.error %>
        </div>
        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
      </div>
    </div>
  </div>
  <% } %>
  <script>
    var toastElList = [].slice.call(document.querySelectorAll('.toast'));
    var toastList = toastElList.map(function(toastEl) {
      if (typeof bootstrap !== 'undefined') {
        return new bootstrap.Toast(toastEl, { autohide: false }).show();
      } else {
        console.error('Bootstrap is not defined when initializing toasts.'); // gpt_pilot_debugging_log
      }
    });
  </script>
  <div class="container mt-4 text-center">
    <h2 class="text-off-white">Login</h2>
    <form action="/login" method="post" class="form-signin mt-3">
      <div class="form-floating mb-3">
        <input type="text" class="form-control" id="username" name="username" placeholder="Username" required autofocus>
        <label for="username" class="text-off-white">Username</label>
      </div>
      <div class="form-floating mb-3">
        <input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
        <label for="password" class="text-off-white">Password</label>
      </div>
      <button class="btn btn-lg btn-primary btn-block" type="submit">Login</button>
    </form>
  </div>
  <%- include('partials/footer') %>
</body>
</html>