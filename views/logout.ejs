<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Logged Out</title>
  <!-- Bootstrap 5.3.2 CSS CDN -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
  <!-- Custom theme CSS -->
  <link rel="stylesheet" href="/css/theme.css">
</head>
<body class="bg-dark-charcoal">
  <%- include('partials/header', {user: user}) %>
  <div class="container text-center mt-5">
    <h1 class="text-off-white">You have been successfully logged out.</h1>
    <% if (!user) { %>
      <a href="/login" class="btn btn-primary mt-3">Login Again</a>
    <% } %>
  </div>
  <%- include('partials/footer') %>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.0/js/bootstrap.bundle.min.js" integrity="sha384-zaIcCO4LwTZzJFbcJrA1PAIYyiF6PbPb6Yp6RWt2qjcnH0VfGckB8usT1OOJpFV4" crossorigin="anonymous"></script>
  <!-- Error and logging handlers -->
  <script>
    window.addEventListener('error', function(event) {
      console.error('An error occurred on the logout page:', event.error); // gpt_pilot_debugging_log
    });
    console.log('Logout page loaded successfully.'); // gpt_pilot_debugging_log
  </script>
</body>
</html>